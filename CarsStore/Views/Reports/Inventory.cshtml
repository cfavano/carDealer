@model CarsStore.UI.Models.ReportViewModels.ReportViewModel
@{
    ViewBag.Title = "Inventory Report";
}

<h2>Inventory Report</h2>
<h3>New Vehicles</h3>
<div class="row">
    <div class="col-6">
        <table class="table table-striped report">
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Count</th>
                    <th>Stock Value</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var newCars in Model.ReportNew)
                {
                    <tr>
                        <td>@newCars.Year</td>
                        <td>@newCars.Make</td>
                        <td>@newCars.Model</td>
                        <td>@newCars.Count</td>
                        <td>@String.Format("{0:C0}", newCars.Total)</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Used Vehicles</h3>

        <table class="table table-striped report">
            <thead>
                <tr>
                    <th>Year</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Count</th>
                    <th>Stock Value</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var usedCars in Model.ReportUsed)
                {
                    <tr>
                        <td>@usedCars.Year</td>
                        <td>@usedCars.Make</td>
                        <td>@usedCars.Model</td>
                        <td>@usedCars.Count</td>
                        <td>@String.Format("{0:C0}", usedCars.Total)</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>