@model CarsStore.UI.Models.AdminSpecialViewModel
@section Scripts {
    <script src="@Url.Content("~/Scripts/ViewScripts/deleteSpecial.js")"></script>
}
@{
    ViewBag.Title = "Specials";
}

<h2>Specials</h2>

<div class="col-sm-12 outline">


    @using (Html.BeginForm("Specials", "Admin", FormMethod.Post, new { @class = "form" }))
    {
        @Html.ValidationSummary(true)
        <div class="row">
            <div class="form-group col-4">
                @Html.LabelFor(m => m.Special.Title)
                @Html.TextBoxFor(m => m.Special.Title, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Special.Title)</span>
            </div>
        </div>
        <div class="row">
            <div class="form-group  col-4">
                @Html.LabelFor(m => m.Special.Description)
                @Html.TextAreaFor(m => m.Special.Description, new { @class = "form-control" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Special.Description)</span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>


    }
</div>
    @foreach (var special in Model.SpecialsList)
    {
        <div class="col-sm-12 ">
            <div class="row  row-@special.SpecialsID outline">
                <div class="col-sm-2">   
                <img src="~/Images/dollar-icon.png" class="img-fluid dollar" /></div>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-10">
                            <h2>@special.Title</h2>
                        </div>
                        <div class="col-sm-2">
                            <button id="@special.SpecialsID" class="delete-special btn btn-danger float-right">Delete</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <p> @special.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


