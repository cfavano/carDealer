@model CarsStore.UI.Models.UserViewModel
@{
    ViewBag.Title = "Edit Users";
}

<div class="row">
    <div class="col-12">
        <h2>Edit User</h2>
    </div>
</div>

@Html.ValidationSummary()
@using (Html.BeginForm("EditUser", "Admin", new { @class = "form-inline" }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <div class="row">
        <div class="col-8">
            <div class="row">
                <div class="col-6">
                    <label>First Name</label>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</span>
                </div>
                <div class="col-6">
                    <label>Last Name</label>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div class="col-6">

                    <label>Role</label>
                    @Html.DropDownListFor(m => m.RoleName, Model.RoleList, new { @class = "form-control" })
                </div>
            </div>


            <div class="row">
                <div class="col-6">
                    <label>Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                <div class="col-6">
                    <label>Confirm Password</label>
                    @Html.PasswordFor(m => m.ConfirmedPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}
